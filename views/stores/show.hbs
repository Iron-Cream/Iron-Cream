<header>
  <img src="/images/ironcream-logo.png" id="logo" alt="logo" />
  <h2 class="subtitle">üç¶The yummiest ice cream nearby!üç¶</h2>
</header>

<div id="show">
  {{#with store}}
  <img
    src="{{#if picUrl}}{{ picUrl }}{{else}}{{ pictureId }}{{/if}}"
    alt="picture of {{ title }}"
  />
  <div class="bottom-text">
    <h1>{{ name }}</h1>
    <h3>Address:</h3>
    <p>{{ address }}</p>

    {{#if price_level}}
    <h3>Price level:</h3>
    <p class="icecream-level">{{ icecream_level }}</p>
    {{/if}}

    {{#if opening_hours}}
    <h3>Opening hours:</h3>
    <ul id="opening-hours">
      {{#each opening_hours}}
      <li>{{ this }}</li>
      {{/each}}
    </ul>
    {{/if}}

    {{#if description}}
    <h3>Description:</h3>
    <p>{{ description }}</p>
    {{/if}}

    {{#if ../user}}
    <div id="fav_buttons">
      {{#if favourite}}
      <a id="del_fav" href="/favourites/delete/{{ _id }}"><img src="/images/cross.png" alt="cross icon" />Remove from favourites</a>
      {{else}}
      <a id="add_fav" href="/favourites/add/{{ _id }}"><img src="/images/heart.png" alt="heart icon" />Add to favourites</a>
      {{/if}}
    </div>
    {{/if}}
  </div>
</div>
<h2>What other users say about {{ name }}:</h2>
{{#if comments}}
<div id="comment-list">
  {{#each comments}}
  <section>
    <div class="top-box"></div>
    <img src="{{ user.avatar.path }}" alt="user picture" />
    <div class="bottom-box">
      <blockquote>
        <p>{{ text }}</p>
      </blockquote>
      <div class="test-details">
        <p>{{ user.username }}</p>
      </div>

      <!-- {{#ifEquals @root.user.username user.username }}
      <button class="btn-del-small" userId="{{ user._id }}" storeId="{{ _id }}">
        X
      </button> -->
      <!-- <button class="btn-edit-small" userId="{{ user._id }}" storeId="{_id}">
        Edit
      </button> -->
      <!-- {{/ifEquals}} -->
    </div>
  </section>
  {{/each}}
</div>
{{else}}
<p id="no-comment">There are no comments yet.</p>
{{/if}}
<form action="/view/{{ _id }}" method="POST" id="comment-form">
  <label for="comment"
    >Add a comment <img src="/images/comment.png" alt="speach bubble"
  /></label>
  <textarea
    id="comment"
    name="comment"
    placeholder="Leave your review here."
  ></textarea>
  <button type="submit">Add</button>
</form>
{{/with}}

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/js/script.js"></script>
