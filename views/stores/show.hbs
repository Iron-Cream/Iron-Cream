<div class="content">
  {{#with store}}
  <img
    src="{{#if picUrl}}{{ picUrl }}{{else}}{{ pictureId }}{{/if}}"
    alt="picture of {{ title }}"
  />
  <h1>{{ name }}</h1>
  <h2>Address:</h2>
  <p>{{ address }}</p>

  {{#if price_level}}
  <h2>Price level:</h2>
  <p>{{ price_level }}</p>
  {{/if}}

  {{#if opening_hours}}
  <h2>Opening hours:</h2>
  <ul id="opening-hours">
    {{#each opening_hours}}
    <li>{{ this }}</li>
    {{/each}}
  </ul>
  {{/if}}

  {{#if comments}}
  <h2>Comments:</h2>
  <div id="comment-list">
    {{#each comments}}
    <section>
      <div class="top-box"></div>
      <img src="{{ user.avatar.path }}" alt="user picture" />
      <div class="bottom-box">
        <blockquote>
          <p>{{ text }}</p>
        </blockquote>
        <div class="test-details">
          <p>{{ user.username }}</p>
        </div>
      </div>
    </section>
    {{/each}}
  </div>
  {{else}}
  There are no comments yet.
  {{/if}}
  {{/with}}

  {{#if favourite}}
  <a class="button" id="add_fav" value="{{ store._id }}">Add to favourites</a>
  {{else}}
  <a class="button" id="del_fav" value="{{ store._id }}"
    >Remove from favourites</a
  >
  {{/if}}
</div>

<script src="/js/script.js"></script>
