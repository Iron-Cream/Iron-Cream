<div class="content">
    <h1>Manage submissions:</h1>
    {{#if stores}}
    <div id="manage-list">
    {{#each stores}}
        <section>
            <img src="{{ picUrl }}" alt="picture of {{ title }}" />
            <div class="manage-info">
                <a class="store-name" href="/view/{{ _id }}">{{name}}</a>
                <p class="store-address">{{ address }}</p>
                <div class="buttons">
                    <a class="button" href="#">Edit</a>
                    <a class="button" href="/delete/{{ _id }}">Delete</a>
                </div>
            </div>
        </section>
    {{/each}}
    </div>
  {{else}}
  You haven't uploaded anything yet.
  {{/if}}
</div>
