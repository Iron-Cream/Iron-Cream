<div id="edit" class="content">
    {{#with store}}
    <form action="/edit/{{_id}}" method="POST">
        <h2>Edit information for {{name}} üç®</h2>
        <div class="row">
            <label for="name">Title: </label>
            <input type="text" name="name" id="name" value="{{ name }}">
        </div>
        <div class="row">
            <label for="description">Description: </label>
            <input type="text" name="description" id="description" value="{{ description }}">
        </div>
        <div class="row">
            <label for="opening_hours">Opening hours: </label>
            <input type="text" name="opening_hours" id="opening_hours" value="{{ opening_hours }}">
        </div>

    <button type="submit">Edit this store</button>
    </form>
    {{/with}}
</div>
